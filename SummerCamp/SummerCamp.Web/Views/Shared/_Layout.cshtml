<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css", "~/Content/themes/base/css","~/Content/mobileCss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div data-add-back-btn="true" data-back-btn-text="Previous" data-position="fixed"
         data-back-btn-theme="a" data-role="page" data-theme="a" id="home">
        <div data-role="header">
            <h1>Summer Code Camp</h1>

            @if (IsSectionDefined("Header"))
            {
                @RenderSection("Header")
            }
            else
            {

                @Html.Partial("_LoginPartial")
            }
        </div>
        <div data-role="content">
            @RenderBody()
        </div>
        <div data-role="footer" data-position="fixed">
            <div data-role="navbar">
                <ul>
                    <li><a data-icon="home" href="/Home/Index" class="ui-btn-active ui-state-persist">Home</a></li>
                    <li><a data-icon="info" href="#contact">Contact Us</a></li>
                    <li><a href="#events" data-icon="info">Events</a></li>
                    <li><a href="#news" data-icon="grid">News</a></li>
                    <li>
                        <a  href="/feedbackMVC/Index" data-icon="refresh" data-transition="fade">
                            Feedback
                        </a>
                    </li>
</ul>
            </div>
        </div>
    </div>

    <div data-role="page" id="contact" data-theme="a">
        <div data-role="header">
            <h1>Contact Us</h1>
        </div>
        <div data-role="content">
            <h2 style="text-align: center;">Contact</h2>
            <form action="processEmail.cshtml" method="post" data-transition="pop">
                <div data-role="fieldcontain">
                    <label for="senderName">Your Name:</label>
                    <input type="text" name="senderName" id="senderName">
                </div>               
                <div data-role="fieldcontain">
                    <label for="senderEmail">Your Email Address:</label>
                    <input type="email" name="senderEmail" id="senderEmail">
                </div>
                <div data-role="fieldcontain">
                    <label for="productCategories">
                        What future camps are you
                        interested in?
                    </label>
                    <select name="productCategories[]" id="productCategories"
                            multiple data-native-menu="false">
                        <option value="">Select...</option>
                        <option value="Winter">Winter Games</option>
                        <option value="Spring">Spring Lab</option>
                    </select>
                </div>
                <div data-role="fieldcontain">
                    <label for="message">Your Message:</label>
                    <textarea name="message" id="message" placeholder="Please type
your message" required="required" cols="80" rows="10" maxlength="10000">
                        </textarea>
                </div>
                <input type="submit" name="sendMessage" id="sendMessage"
                       value="Send Email">
            </form>
        </div>
        <div data-role="footer" data-position="fixed" data-id="nav">
            <div data-role="navbar">
                <ul>
                    <li><a data-icon="home" href="/Home/Index">Home</a></li>
                   
                    <li>
                        <a data-icon="info" href="#contact" class="ui-btn-active ui-statepersist">
                            Contact Us
                        </a>
                    </li>
                    <li><a href="#events" data-icon="info">Events</a></li>
                    <li><a href="#news" data-icon="grid">News</a></li>
                    <li>
                        <a href="feedback.html" data-icon="refresh" data-transition="fade">
                            Feedback
                        </a>
                    </li>
</ul>
            </div>
        </div>
    </div>

                @Scripts.Render("~/bundles/jquery")
              
                <script>

                    $(document).ready(function() {
                        $('a[href^="#"]').bind('click vclick', function () {
                            location.hash = $(this).attr('href');
                            return false;
                        });
                    });


                    $(document).on("mobileinit", function () {
                        $.mobile.loadingMessage = 'Please wait';
                        $.mobile.ajaxEnabled = false;
                    });
                </script>
                @Scripts.Render("~/bundles/jquerymobile")
                @RenderSection("scripts", required: false)
</body>
</html>

